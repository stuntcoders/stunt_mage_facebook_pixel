<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <block type="core/template" name="stuntcoders.fb.pixel" template="stuntcoders/fbpixel/track.phtml"/>
        </reference>
        <reference name="head">
            <block type="core/template" name="stuntcoders.fb.complete.registration.pixel" after="stuntcoders.fb.pixel" template="stuntcoders/fbpixel/complete-registration.phtml"/>
        </reference>
        <reference name="head">
            <block type="core/template" name="stuntcoders.fb.add.to.cart.pixel" after="stuntcoders.fb.pixel" template="stuntcoders/fbpixel/add-to-cart.phtml"/>
        </reference>
    </default>
    <catalogsearch_result_index>
        <reference name="head">
            <block type="core/template" name="stuntcoders.fb.search.pixel" after="stuntcoders.fb.pixel" template="stuntcoders/fbpixel/search.phtml"/>
        </reference>
    </catalogsearch_result_index>
    <checkout_onepage_success>
        <reference name="head">
            <block type="core/template" name="stuntcoders.fb.purchase.pixel" after="stuntcoders.fb.pixel" template="stuntcoders/fbpixel/purchase.phtml"/>
        </reference>
    </checkout_onepage_success>
    <wishlist_index_index>
        <reference name="head">
            <block type="core/template" name="stuntcoders.fb.add.to.wishlist.pixel" after="stuntcoders.fb.pixel" template="stuntcoders/fbpixel/add-to-wishlist.phtml"/>
        </reference>
    </wishlist_index_index>
    <catalog_product_view>
        <reference name="head">
            <block type="core/template" name="stuntcoders.fb.view.content.pixel" after="stuntcoders.fb.pixel" template="stuntcoders/fbpixel/view-content.phtml"/>
        </reference>
    </catalog_product_view>
    <checkout_onepage_index>
        <reference name="head">
            <block type="core/template" name="stuntcoders.fb.initiate.checkout.pixel" after="stuntcoders.fb.pixel" template="stuntcoders/fbpixel/initiate-checkout.phtml"/>
        </reference>
    </checkout_onepage_index>
    <checkout_multishiping_index>
        <reference name="head">
            <block type="core/template" name="stuntcoders.fb.initiate.checkout.pixel" after="stuntcoders.fb.pixel" template="stuntcoders/fbpixel/initiate-checkout.phtml"/>
        </reference>
    </checkout_multishiping_index>
</layout>